<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fffff1"
    >
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/point_list_item_bg" />
    
    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:onClick="onClick"
        android:src="@drawable/point" />
    

    <TextView
        android:id="@+id/nameOfThePoint"

        android:layout_alignTop="@+id/buttonBack"
        android:layout_toRightOf="@+id/buttonBack"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
    	android:text="@string/hello_world"    
        android:layout_width="wrap_content"
        android:textColor="#888888"
        android:layout_height="wrap_content"
         />

    <TextView
        android:id="@+id/coord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonBack"
        android:layout_below="@+id/buttonBack"
        android:textColor="#374284"
        android:text="TextView" />

    <TextView
        android:id="@+id/pointDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonBack"
        android:layout_marginRight="18dp"
        android:textColor="#888888"
        android:text="00.00.0000" />

    <TextView
        android:id="@+id/geocode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pointDate"
        android:layout_marginRight="18dp"
        android:textColor="#888888"
        android:text="" />
    
</RelativeLayout>
