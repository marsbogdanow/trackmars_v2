<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	style="@style/CustomListViewRow"
    android:background="#fffff0"
>

    <RelativeLayout style="@style/TrackPoint" >
    
		<TextView
	        android:id="@+id/nameOfThePoint"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="35dp"
	        android:text="Некоторый текст, который не будет отображаться"
	        android:textColor="#888888"
	        android:textSize="17sp" 
	
			android:singleLine="false"
	        android:layout_gravity="fill"/>
		
        <ImageView
	        android:id="@+id/buttonTrack"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        
	        android:layout_below="@+id/nameOfThePoint"
	        android:layout_alignLeft="@+id/nameOfThePoint"
	        android:layout_marginLeft="0dp"
	    	android:layout_marginTop="10dp"
	        android:background="@null"
	        android:src="@drawable/point_sm" />
		
        <TextView
            android:id="@+id/datesOfTheTrack"
            style="@style/DateText"
	        android:layout_alignBottom="@+id/buttonTrack"
	        android:layout_alignLeft="@+id/nameOfThePoint"
	        android:layout_marginLeft="50dp"
            android:layout_marginBottom="0dp"
            android:singleLine="false"
            android:text="12.13.2014" />

        	    
	    
        <ImageView
            android:id="@+id/removableTrackBody"
            style="@style/TrackRepresentation"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:src="@drawable/hist_track_body" />
	    	    
        <ImageView
            android:id="@+id/pointOfTheTrackBd1"
            style="@style/TrackRepresentation"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/hist_track_body" />
        
        <ImageView
            android:id="@+id/pointOfTheTrack"
            style="@style/TrackRepresentation"
            android:layout_height="fill_parent"
            android:layout_below="@+id/pointOfTheTrackBd1"
            android:layout_marginTop="-20dp"
            android:src="@drawable/hist_track_point" />


        <RelativeLayout
            android:id="@+id/removableTerm"
            style="@style/TerminatingLineOutBound"
            android:layout_alignLeft="@+id/buttonTrack"
            android:layout_below="@+id/datesOfTheTrack">

        <RelativeLayout 
            style="@style/TerminatingLineInnerBound"
		>
            
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="-"
	        android:textColor="#D8D8D8"
	        android:textSize="12sp"/>
        
        </RelativeLayout>
        </RelativeLayout>
	    
</RelativeLayout>
</TableRow>