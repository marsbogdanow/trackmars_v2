<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="20dp"
    android:paddingBottom="0dp"
    android:background="#ffffff"
>

    <RelativeLayout style="@style/TrackPoint" >
    
    <TextView
        android:id="@+id/nameOfTheGeo"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
    	android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
    	android:text="@null"    
        android:textColor="#1E2C93"
        android:textSize="18sp"
		android:singleLine="false"
        android:layout_gravity="fill"
         />

        <ImageView
            android:id="@+id/pointOfTheTrackBd1"
            style="@style/TrackRepresentationBody"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
        />
	    	    
        <ImageView
            android:id="@+id/pointOfTheTrackBd2"
            style="@style/TrackRepresentationBody"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
		/>
        
        <ImageView
            android:id="@+id/pointOfTheTrackBd3"
            style="@style/TrackRepresentationBody"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
         />
        
        <RelativeLayout
            android:id="@+id/removableTerm"
            style="@style/TerminatingLineOutBound"
            android:layout_alignLeft="@+id/nameOfTheGeo"
            android:layout_below="@+id/nameOfTheGeo"
            >

        <RelativeLayout 
            style="@style/TerminatingLineInnerBound"
		>
            
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="-"
	        android:textColor="#D8D8D8"
	        android:textSize="12sp"/>
        
        </RelativeLayout>
        </RelativeLayout>
        
        </RelativeLayout>
        
</TableRow>