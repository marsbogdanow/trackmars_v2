<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
	
	<!--  Стили для рисования окна ожидания -->
	<style name="GenericProgressBackground" parent="android:Theme">
	    <item name="android:layout_width">fill_parent</item>    
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:background">#DD111111</item>    
	    <item name="android:gravity">center</item>  
	</style>
	
	<style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:indeterminate">true</item> 
	</style>
	    
	<style name="GenericFullScreenWindow" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
	    
	    <item name="android:layout_width">fill_parent</item>    
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:background">#DD111111</item>    
	    <item name="android:gravity">center</item>  
	</style>
	
	
	
	
	<!-- елемент списка -->
	<style  name="GenericTableRow" parent="android:Theme">
	    <item name="android:paddingBottom">10dp</item>
	</style>
	
	
	<style name="myText" parent="android:Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>
	
	<!--
		/////////////////////////////////////////////
		Стили разных типов строк в кастомном ListView 
	 -->
	<style name="CustomListViewRowHeader" parent="@style/CustomListViewRow">
    	<item name="android:paddingTop">10dp</item>
    	<item name="android:paddingBottom">15dp</item>
    </style>
    
	<style name="CustomListViewRow" parent="android:Theme">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:background">@null</item>
    	<item name="android:paddingLeft">0dp</item>
    	<item name="android:paddingRight">0dp</item>
    	<item name="android:paddingTop">0dp</item>
    	<item name="android:paddingBottom">0dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

	<!--
		/////////////////////////////////////////////
	 -->

	<!--
		/////////////////////////////////////////////
		Стили линии разделителя 
	 -->
	<style name="TerminatingLineOutBound" parent="android:Theme">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">4dp</item>
    	<item name="android:background">#CCCCCC</item>
    	
    	<item name="android:paddingLeft">1dp</item>
    	<item name="android:paddingRight">1dp</item>
    	<item name="android:paddingTop">1dp</item>
    	<item name="android:paddingBottom">1dp</item>

        <item name="android:layout_marginTop">15dp</item>
    </style>
	<style name="TerminatingLineInnerBound" parent="android:Theme">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:background">#D9D9D9</item>
    </style>
		<!--
		/////////////////////////////////////////////
	 -->

	<!--
	//////////////////////////////////////////////////
	Стиль картинки трека сбоку 
	 -->	
	<style  name="TrackRepresentation" parent="android:Theme">
    	<item name="android:layout_width">wrap_content</item>
	   	<item name="android:background">@null</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>
    
	<style  name="TrackRepresentationBody" parent="@style/TrackRepresentation">
    	<item name="android:src">@drawable/hist_track_body</item>
    </style>
			
		
	<style  name="ListViewHeader" parent="@style/myText">
    	<item name="android:layout_width">fill_parent</item>
	   	<item name="android:background">@color/colorful</item>    
	    <item name="android:gravity">left</item> 
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

    	<item name="android:paddingLeft">20dp</item>
    	<item name="android:paddingRight">20dp</item>
    	<item name="android:paddingTop">10dp</item>
    	<item name="android:paddingBottom">10dp</item>
    	
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


	<style  name="TrackPoint" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:background">@color/general_light_background</item>    
	    <item name="android:gravity">left</item> 
    
    	<item name="android:paddingLeft">10dp</item>
    	<item name="android:paddingRight">20dp</item>
    	<item name="android:paddingTop">0dp</item>
    	<item name="android:paddingBottom">0dp</item>
    	
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
		
	
	<style  name="TrackHeader" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:background">@color/middle_light_gray</item>    
	    <item name="android:gravity">left</item> 
    
    	<item name="android:paddingLeft">10dp</item>
    	<item name="android:paddingRight">20dp</item>
    	<item name="android:paddingTop">0dp</item>
    	<item name="android:paddingBottom">0dp</item>
    	
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
		

	<style  name="TrackNameText" parent="@style/myText">
	    <item name="android:background">@null</item>    
	    <item name="android:gravity">left</item> 
    
    	<item name="android:paddingLeft">0dp</item>
    	<item name="android:paddingRight">0dp</item>
    	<item name="android:paddingTop">0dp</item>
    	<item name="android:paddingBottom">0dp</item>
    	
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        
        <item name="android:textColor">@color/very_dark_text</item>
        <item name="android:textSize">18sp</item>
        </style>
		
	<style  name="DateText" parent="@style/myText">
	    <item name="android:background">@null</item>    
	    <item name="android:gravity">left</item> 
    
    	<item name="android:paddingLeft">0dp</item>
    	<item name="android:paddingRight">0dp</item>
    	<item name="android:paddingTop">0dp</item>
    	<item name="android:paddingBottom">0dp</item>
    	
        
        <item name="android:textColor">@color/middle_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
			
	<style name="GenericTextHeader" parent="android:Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:background">@color/general_light_background</item>    
	    <item name="android:gravity">left</item> 
        <item name="android:textColor">@color/colorfulHeaderText</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
	    
	</style>
	
	<style name="GenericAttributeName" parent="android:Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:background">@color/general_light_background</item>    
	    <item name="android:gravity">left</item> 
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">monospace</item>
	</style>
	
	<style name="GenericAttributeVal" parent="android:Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:background">@color/general_light_background</item>    
	    <item name="android:gravity">left</item> 
        <item name="android:textColor">@color/very_dark_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">monospace</item>
	</style>
	
</resources>
